<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.temp.english_premier_league">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/messi_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/football_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.CompetitionActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activities.TeamActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FixturesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SingleFixture"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PlayersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SinglePlayerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.CompetionDashboard"></activity>
    </application>

</manifest>