<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="3dp"
    android:adjustViewBounds="true"
    tools:context="com.example.temp.english_premier_league.activities.FixturesActivity"
    >
<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:adjustViewBounds="true"

    >
    <TextView
        android:id="@+id/competition_id"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="competition"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"

        ></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/home_team_crest"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"


            />
        <ImageView
            android:id="@+id/away_team_crest"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin ="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/home_team_name"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Home Team"
            android:textColor="@color/colorAccent"
            android:background="@drawable/text_changer"
            />
        <TextView
            android:id="@+id/away_team_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Away team"
            android:background="@drawable/text_changer"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        >
        <TextView
            android:id="@+id/home_team_score"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16pt"
            android:textColor="@color/colorAccent"
            android:text="2"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16pt"
            android:textColor="@color/colorWhite"

            android:text="-"/>
        <TextView
            android:id="@+id/away_team_score"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16pt"
            android:textColor="@color/colorAccent"
            android:text="2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/match_date_small"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Date"
            android:textColor="@color/colorAccent"
            android:background="@drawable/fixture_small"
            />
        <TextView
            android:id="@+id/match_date_time_small"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="time"
            android:background="@drawable/fixture_small"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>