<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:adjustViewBounds="true"
    tools:context="com.example.temp.english_premier_league.activities.FixturesActivity"
    >
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:adjustViewBounds="true"

        >
        <TextView
            android:id="@+id/competition_id_BIG"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:text="competition"
            android:textSize="10pt"

            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/home_team_crest"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"


                />
            <ImageView
                android:id="@+id/away_team_crest"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="40dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_changer"

            >
            <TextView
                android:id="@+id/home_team_name"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:gravity="center"

                android:text="Home Team"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:id="@+id/away_team_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Away team"
                android:textColor="@color/colorAccent"

                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/final_Scoreline"
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:layout_height="60dp"
            android:gravity="center"

            android:textSize="9pt"
            android:text="Full-Time Score"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/fixture_small"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/home_team_score"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="11pt"
                android:textColor="@color/colorAccent"
                android:text="2"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16pt"
                android:textColor="@color/colorAccent"
                android:text="-"/>
            <TextView
                android:id="@+id/away_team_score"
                android:layout_width="40dp"
                android:textColor="@color/colorAccent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="11pt"
                android:text="2"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/half_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="9pt"
            android:text="Half Time Score"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/half_home_team_score"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="10pt"
                android:text="2"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="13pt"
                android:text="-"/>
            <TextView
                android:id="@+id/half_away_team_score"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="10pt"
                android:text="2"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"></View>
        <TextView
            android:id="@+id/match_date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="8pt"
            android:text="date"></TextView>
        <TextView
            android:id="@+id/match_date_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="8pt"
            android:text="time"></TextView>
        <TextView
            android:id="@+id/match_day"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="8pt"
            android:text="match day"></TextView>
        <TextView
            android:id="@+id/odds"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="8pt"
            android:text="odds"></TextView>


    </LinearLayout>
</LinearLayout>