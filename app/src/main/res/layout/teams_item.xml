<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"

    tools:context="com.example.temp.english_premier_league.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fixture_small"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:id="@+id/teams_list_crest"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"

                />
            <TextView
                android:id="@+id/teams_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="team_name_placeholder"
                android:textSize="12pt"
                android:gravity="center_vertical"
                />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>